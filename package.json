{
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "cheerio": "^1.0.0-rc.12",
    "cspell": "^6.31.1",
    "docsy": "github:google/docsy#v0.6.0",
    "glob": "^10.0.0",
    "hugo-extended": "^0.111.3",
    "patch-package": "^6.5.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sync-request": "^6.1.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.33.0",
    "open-cli": "^7.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.7"
  },
  "scripts": {
    "build": "hugo --cleanDestinationDir --minify --verbose && node postprocess.js",
    "format": "prettier --write content/",
    "format:check": "prettier --check content/",
    "lint": "markdownlint content/",
    "server": "open-cli http://localhost:1313 && hugo server -p 1313",
    "spellcheck": "cspell \"content/**/*.md\"",
    "postinstall": "patch-package",
    "make-patch": "patch-package docsy"
  },
  "cspell": {
    "dictionaries": [
      "avr-wordlist"
    ],
    "dictionaryDefinitions": [
      {
        "name": "avr-wordlist",
        "path": "./avr-wordlist.txt"
      }
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "printWidth": 88
  },
  "pre-commit": [
    "spellcheck",
    "format:check"
  ]
}
